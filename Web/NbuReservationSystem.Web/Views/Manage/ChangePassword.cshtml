@using NbuReservationSystem.Web.App_GlobalResources.Labels
@model NbuReservationSystem.Web.Models.Requests.Manage.ChangePasswordViewModel
@{
    ViewBag.Title = AccountLabels.ChangePassword;
}

<div class="container">
    <div class="row">
        <div class="col-md-28">
            <h2 class="text-center">@ViewBag.Title</h2>
            <hr />
        </div>
    </div>
    @if (this.ViewBag.PasswordChangeSuccess != null && this.ViewBag.PasswordChangeSuccess)
    {
        <div class="row">
            <div class="col-md-28">
                <p class="alert alert-success" role="alert">The password was change successfully</p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-28">

                @Html.ValidationSummary(true)

                @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form", @class = "custom-form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.OldPassword, AccountLabels.Password, new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.OldPassword)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.NewPassword, AccountLabels.NewPassword, new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.NewPassword)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, AccountLabels.ConfirmPassword, new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ConfirmPassword)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-10">
                                <input type="reset" value="@ButtonLabels.Clear" class="btn btn-default"/>
                                <input type="submit" value="@ButtonLabels.Submit" class="btn btn-default"/>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
