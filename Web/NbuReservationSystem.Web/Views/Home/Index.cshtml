@using NbuReservationSystem.Web.App_GlobalResources.Labels
@using Resources = NbuReservationSystem.Web.App_GlobalResources.Home;

@{
    ViewBag.Title = NavBarLabels.Home;
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <img src="~/Content/Images/slider1.png">
        </div>

        <div class="item">
            <img src="~/Content/Images/slider2.png">
        </div>

        <div class="item">
            <img src="~/Content/Images/slider3.png">
        </div>

        <div class="item">
            <img src="~/Content/Images/slider4.png">
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-28">
            <div id="title-container" class="page-header text-center">
                <h1>Система за онлайн резервация на зали в НБУ</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-14">
            <div class="content-boxes">
                <span class="glyphicon glyphicon-floppy-save"></span>
                <h3>@Resources.IndexContent.RegisterFastAndEasy</h3>
                <p>@Resources.IndexContent.RegisterFastAndEasyTxt</p>
            </div>
        </div>
        <div class="col-md-14">
            <div class="content-boxes">
                <span class="glyphicon glyphicon-edit"></span>
                <h3>@Resources.IndexContent.ChangeReservation</h3>
                <p>@Resources.IndexContent.ChangeReservationTxt</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-14">
            <div class="content-boxes">
                <span class="glyphicon glyphicon-envelope"></span>
                <h3>@Resources.IndexContent.ReceiveOurConfirmation</h3>
                <p>@Resources.IndexContent.ReceiveOurConfirmationTxt</p>
            </div>
        </div>
        <div class="col-md-14">
            <div class="content-boxes">
                <span class="glyphicon glyphicon-calendar"></span>
                <h3>@Resources.IndexContent.PreviewDayAndMonth</h3>
                <p>@Resources.IndexContent.PreviewDayAndMonthTxt</p>
            </div>
        </div>
    </div>
    <hr />
</div>

<div id="grey-container" class="container-fluid">
    <div id="bg-color-grey">
        <div class="row">
            <div class="col-md-10 col-md-offset-4" >
                <img src="~/Content/Images/laptop-tablet-phone-pc1.png" class="img-responsive">
            </div>
            <div class="col-md-14">
                <br />
                <div>
                    <h2 id="trust-carl">@Resources.IndexContent.WhyCARL</h2>
                    <ul>
                        <li><span class="glyphicon glyphicon-ok green-ok"></span>@Resources.IndexContent.BeTheFirstToMakeReservation</li>
                        <li><span class="glyphicon glyphicon-ok green-ok"></span>@Resources.IndexContent.StayInformed</li>
                        <li><span class="glyphicon glyphicon-ok green-ok"></span>@Resources.IndexContent.PcAndMobileSupport</li>
                        <li><span class="glyphicon glyphicon-ok green-ok"></span>@Resources.IndexContent.PlanEvents</li>
                        <li><span class="glyphicon glyphicon-ok green-ok"></span>@Resources.IndexContent.ReservationHalls</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

