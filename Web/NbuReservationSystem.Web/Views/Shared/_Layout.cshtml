@using NbuReservationSystem.Web.App_GlobalResources.Labels
﻿<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CARL</title>
    @*TODO: fix this...!!*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.43/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-colorpicker/2.4.0/css/bootstrap-colorpicker.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @RenderSection("css", false)
</head>
<body>
    <nav id="home-nav" class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapser"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CARL", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapser">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(NavBarLabels.Home, "Index", "Home", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink(NavBarLabels.Reservations, "Index", "Reservations", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink(NavBarLabels.About, "About", "Home", new { area = string.Empty }, null)</li>
                </ul>
                    @Html.Partial("_LoginPartial")
                </div>
        </div>
    </nav>

    @RenderBody()

    <div class="container">
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.UtcNow.Year - @NavBarLabels.AllRightsReserved</p>
        </footer>
        <hr />
    </div>

    @section scripts {
        <script>
            $('.carousel').carousel({
                interval: 1500
            });
        </script>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-dp")
    @*TODO: fix this...!!*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.43/js/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-colorpicker/2.4.0/js/bootstrap-colorpicker.js"></script>
    <script type="text/javascript" src="~/Scripts/DataTables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/DataTables/media/js/dataTables.bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

