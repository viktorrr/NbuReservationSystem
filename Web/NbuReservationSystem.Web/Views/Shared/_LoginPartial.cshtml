@using NbuReservationSystem.Web.App_GlobalResources.Labels

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = string.Empty }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    @NavBarLabels.AdminPanel
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink(NavBarLabels.NewHall, "NewHall", "Admin")</li>
                    <li>@Html.ActionLink(NavBarLabels.ReservationsAdministration, "Reservations", "Admin")</li>
                    <li><a href="#"></a></li>
                    <li role="separator" class="divider"></li>
                </ul>
            </li>
            <li>
                @Html.ActionLink(NavBarLabels.ChangePassword, "ChangePassword", "Manage", routeValues: new { area = string.Empty }, htmlAttributes: new { title = "Manage" })
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">@NavBarLabels.LogOff</a>
            </li>
        </ul>
    }
}