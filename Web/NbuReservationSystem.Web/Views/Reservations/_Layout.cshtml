<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NbuReservationSystem</title>
    @Styles.Render("~/Content/css")

    @*<style>
            body {
                @if (ViewBag.Counter++ % 2 == 0)
                {
                    @:display: none;
                }
            }
        </style>*@
</head>
<body>

    @*TODO: remove round shit!*@
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            @*TODO: rename data-target below*@
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
                    aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("NbuReservationSystem", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>
    
    

<div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">Всички права запазени &copy; - @DateTime.UtcNow.Year</p>
        </footer>
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
